        html.Div([dcc.Graph(id="fig_lvs_scatter_all", config={"displaylogo": False})],
                 style={"width":"49%","display":"inline-block"}),
        html.Div([dcc.Graph(id="fig_lvs_scatter_r2",  config={"displaylogo": False})],
                 style={"width":"49%","display":"inline-block"}),
    ]),

